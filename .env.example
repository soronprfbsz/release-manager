# ========================================
# Server Configuration
# ========================================
SERVER_NAME=sb
SERVER_HOST=localhost
SERVER_PORT=8081

# ========================================
# MariaDB Configuration
# ========================================
# MariaDB 연결 URL
# - Windows 로컬 프로세스: jdbc:p6spy:mariadb://localhost:13306/sb
# - Docker 컨테이너 내부: jdbc:p6spy:mariadb://mariadb:3306/sb
MARIADB_URL=jdbc:p6spy:mariadb://localhost:13306/sb

# MariaDB 포트 (호스트에서 접근 시)
MARIADB_PORT=13306

# MariaDB 데이터베이스 이름
MARIADB_DATABASE=sb

# MariaDB Root 비밀번호
MARIADB_ROOT_PASSWORD=your_root_password_here

# MariaDB 사용자명
MARIADB_USERNAME=your_username_here

# MariaDB 비밀번호
# 특수문자(!, #, $) 포함 시 반드시 큰따옴표로 감싸야 함
# 예: MARIADB_PASSWORD="your_password!#$123"
MARIADB_PASSWORD=your_password_here

# Database Connection Pool
MARIADB_POOL_SIZE=10
MARIADB_POOL_MIN_IDLE=5
MARIADB_CONNECTION_TIMEOUT=30000

# ========================================
# Flyway Configuration
# ========================================
# Flyway 활성화 여부 (true: 마이그레이션 수행, false: 비활성화)
FLYWAY_ENABLED=true

# ========================================
# Redis Configuration
# ========================================
# Redis Host
# - Windows 로컬 프로세스: localhost
# - Docker 컨테이너 내부: redis
REDIS_HOST=localhost
REDIS_PORT=16379
REDIS_PASSWORD=your_redis_password_here

# ========================================
# gRPC Configuration
# ========================================
GRPC_HOST=localhost
GRPC_PORT=9090
GRPC_TIMEOUT=30
GRPC_MAX_RETRY=3
