# EditorConfig: https://editorconfig.org

# 최상위 설정 파일임을 명시
root = true

# 모든 파일에 적용
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Java 파일
# [*.java]
# indent_style = space
# indent_size = 4

# YAML 파일
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Properties 파일 (.env 포함)
[*.{properties,env}]
indent_style = space
indent_size = 2
charset = utf-8

# .env 파일 (환경 변수)
[.env*]
charset = utf-8
end_of_line = lf

# Gradle 파일
[*.gradle]
indent_style = tab
indent_size = 4

# Markdown 파일
[*.md]
trim_trailing_whitespace = false

# SQL 파일
[*.sql]
indent_style = space
indent_size = 4
